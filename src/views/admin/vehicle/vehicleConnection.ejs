<%- include('../../partials/main', { pageTitle: 'Vehicle Connection' }) %>
    <div class="page-body">
            <div class="container-fluid">
                <div class="row justify-content-center">
                    <div class="col-sm-8">
                        <div class="card">
                            <div class="card-body">
                                <div class="title-header option-title">
                                    <h5>Vehicle Connection</h5>
                                </div>
            
                                <% if (vehicle) { %>   
                                    <div class="row">
                                        <div class="mb-4 row align-items-center">
                                            <label class="form-label-title col-lg-3 col-md-3 mb-0">Vehicle Number</label>
                                            <div class="col-md-9 col-lg-9"><%= vehicle.vehicle_number %></div >
                                        </div>
                                    </div>
                                    
                                    <div class="row">
                                        <div class="mb-4 row align-items-center">
                                            <label class="form-label-title col-lg-3 col-md-3 mb-0">IMEI Number</label>
                                            <div class="col-md-9 col-lg-9"> <%= vehicle.imei_number %> </div >
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="mb-4 row align-items-center">
                                            <label class="form-label-title col-lg-3 col-md-3 mb-0">Delivery Man</label>
                                            <div class="col-md-9 col-lg-9"> <%= vehicle.deliveryman_id %></div >
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="mb-4 row align-items-center">
                                            <label class="form-label-title col-lg-3 col-md-3 mb-0">Phone Number</label>
                                            <div class="col-md-9 col-lg-9"> <%= vehicle.phone%></div >
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="mb-4 row align-items-center">
                                            <label class="form-label-title col-lg-3 col-md-3 mb-0">Vehicle Status</label>
                                            <div class="col-md-9 col-lg-9"> 
                                                <% if (vehicle.is_connected ) { %>
                                                    <button class="btn btn-success">Connected</button>
                                                <% } else { %>
                                                    <button class="btn btn-danger" >Disconnected</button>
                                                <% } %>
                                            </div >
                                        </div>
                                    </div>
            
                                    <!-- <div class="mt-3">
                                        <a href="/admin/vehicle/update/<%= vehicle._id %>" class="btn btn-primary">
                                            <i class="ri-pencil-line"></i>   Update Vehicle
                                        </a>
                                    </div> -->
                            <% } else { %>
                                <div class="text-center">
                                    <h5>Nothing to Show</h5>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <%- include('../../partials/footer') %>
    </div>
            

<style>
    .btn-success {
        background-color: #28a745 !important;
        border-color: #28a745 !important;
    }

    .btn-danger {
        background-color: #dc3545 !important;
        border-color: #dc3545 !important;
    }
</style>

<%- include('../../partials/end')%>