
<%- include('../../partials/main', { pageTitle: "Customer's List's " }) %>

    <style>
        @media (max-width: 768px) { /* Targets mobile screens */
            .mobile-btn {
                padding: 5px !important;
            }
        }
    </style>
            <!-- Container-fluid starts-->
            <div class="page-body">
                <!-- All User Table Start -->
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card card-table">
                                <div class="card-body">
                                    <div class="title-header option-title">
                                        <h5>Users ( <%= customerCount%> )</h5>
                                        <div>
                                            <form class="d-inline-flex" action="/admin/customer/add" method="post" enctype="multipart/form-data">
                                                <input type="file" class="form-control" name="file" id="fileInput" required style="display: none;" onchange="this.form.submit();" />
                                                
                                                <a href="javascript:void(0);" class="align-items-center btn btn-theme d-flex mobile-btn" onclick="document.getElementById('fileInput').click();">
                                                    <i data-feather="upload"></i> Upload
                                                </a>
                                            </form>
                                        
                                            <form class="d-inline-flex">
                                                <a href="/admin/customer/add" class="align-items-center btn btn-theme d-flex mobile-btn">
                                                    <i data-feather="plus"></i> Create
                                                </a>
                                            </form>
                                        </div>
                                    </div>  

                                    <div class="table-responsive table-customer">
                                        <table class="table all-package theme-table" id="table_id">
                                            <thead>
                                                <tr>
                                                    <th>Sr No</th>
                                                    <th>Vehicle Number</th>
                                                    <th>Contact Person</th>
                                                    <th>Phone</th>
                                                    <th>Email</th>
                                                    <th style="display: none;">Gst</th>
                                                    <th>Organisation</th>
                                                    <th>Active Status</th>
                                                    <th style="display: none;" >Payment Method</th>
                                                    <th style="display: none;" >Discount</th>
                                                    <th style="display: none;" >Delivery Fees</th>
                                                    <th>Option</th>
                                                </tr>
                                            </thead>

                                            <tbody>
                                                <% if (customers != '') { %>        
                                                    <% customers.forEach((row, index) => { %> 
                                                <tr>
                                                    <td class="text-center">
                                                        <%= index+1 %>
                                                    </td>
                                                     <td><%= row.vehicle_number %></td>
                                                    <td>
                                                        <div class="user-name">
                                                            <span><%= row.first_name %> <%= row.last_name %></span>
                                                        </div>
                                                    </td>

                                                    <td><%= row.phone %></td>
                                                    <td><%= row.email %></td>
                                                    <td style="display: none;" ><%= row.gst_no %></td>
                                                    <td><%= row.company %></td>
                                                    <td>
                                                        <div class="legend-indicator <%= row.status ? 'status-close' : 'status-danger' %>">
                                                            <span id="statusText_<%= row._id %>"><%= row.status ? 'Active' : 'InActive' %></span>
                                                        </div>
                                                    </td>
                                                    
                                                    <td style="display: none;">
                                                        <div class="status-close" >
                                                            <span style="background-color:rgba(0, 201, 219, .1);color: #00c9db;;">
                                                                <%= row.payment_method %>
                                                            </span>
                                                        </div>
                                                    </td>
                                                    <td style="display: none;" ><%= (row.discount + row.volume_discount + row.card_discount).toFixed(2) %></td>
                                                    <td style="display: none;" ><%= (row.delivery_fee).toFixed(2) %></td>
                                                    <td>
                                                        <ul>
                                                            <li>
                                                                <a href="/admin/customer/detail/<%= row.id%>">
                                                                    <i class="ri-eye-line"></i>
                                                                </a>
                                                            </li>

                                                            <li>
                                                                <a href="/admin/customer/update/<%= row.id%>">
                                                                    <i class="ri-pencil-line"></i>
                                                                </a>
                                                            </li>

                                                            <li>
                                                                <a href="/admin/customer/delete/<%= row.id%>" data-bs-toggle="modal"
                                                                    data-bs-target="#exampleModalToggle">
                                                                    <i class="ri-delete-bin-line"></i>
                                                                </a>
                                                            </li>
                                                        </ul>
                                                    </td>
                                                </tr>
                                                
                                                <% }) %>      
                                                    <% } else { %>
                                                            <td>
                                                                <tr>
                                                                    <td></td>
                                                                    <td style="width: 100%;text-align:right;padding-right:10%">
                                                                        Nothing To Show
                                                                    </td>
                                                                    <td></td>
                                                                    <td></td>
                                                                </tr>
                                                            </td>
                                                    <% } %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- All User Table Ends-->

                <div class="container-fluid">
                    <!-- footer start-->
                    <%- include('../../partials/footer')%>
                    <!-- footer end-->
                </div>
            </div>
            <!-- Container-fluid end -->

                        <!-- Container-fluid end -->
                        
                    
                <!-- Delete Modal Box Start -->
