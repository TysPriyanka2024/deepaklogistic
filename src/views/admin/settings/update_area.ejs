<%- include('../../partials/main', { pageTitle: "City's Lists" }) %>

<div class="page-body">

    <!-- New Product Add Start -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="row">
                    <div class="col-sm-10 m-auto">
                        <div class="card">
                            <div class="card-body">
                                <div class="card-header-2">
                                    <h5>Area's Lists</h5>
                                    <span>Note - These Price will be shown to the user's as per the user's City </span>
                                </div>

                                <form action="/admin/auth/settings/update-serving-areas/<%= area.id %>" method="POST" class="theme-form theme-form-2 mega-form">                                    

                                    <div class="mb-4 row align-items-center">
                                        <label class="form-label-title col-sm-3 mb-0">State Name</label>
                                        <div class="col-sm-9">
                                            <select class="js-example-basic-single w-100" name="state" id="state">
                                                <option value="none">-- All States  --</option>
                                                <% if (stateLists != '') { %>        
                                                    <% stateLists.forEach((row, index) => { %> 
                                                        <option value="<%= row.id %>"> <%= row.name %></option>
                                                <% }) %>      
                                                <% } else { %>
                                                    <option>Nothing To Show</option>
                                                <% } %>
                                            </select>
                                                
                                        </div>
                                    </div>

                                    <div class="mb-4 row align-items-center">
                                        <label class="form-label-title col-sm-3 mb-0">District Name</label>
                                        <div class="col-sm-9">
                                            <select class="js-example-basic-single w-100" name="district" id="sub_category">
                                                <option value="none">-- Select a State First --</option>
                                            </select>
                                        </div>
                                    </div>
                                    
                                    <div class="mb-4 row align-items-center">
                                        <label class="form-label-title col-sm-3 mb-0">Area's Name</label>
                                        <div class="col-sm-9">
                                            <input class="form-control" type="text" name="area" placeholder="Enter The Area..." value="<%= area.name%>" required>
                                        </div>
                                    </div>

                                    <div class="mb-4 row align-items-center">
                                        <label class="form-label-title col-sm-3 mb-0">
                                            Price
                                        </label>
                                        <div class="col-sm-9">
                                            <input class="form-control" type="text" name="price" id="numberInput" oninput="validateFloat(this)" placeholder="Enter The Price..." value="<%= area.price%>" required>
                                            <span id="errorMessage" style="color: red;"></span>
                                        </div>
                                    </div>

                                    <div class="d-inline-flex">
                                        <button class="align-items-center btn btn-theme d-flex" type="submit">
                                                    <i data-feather="plus-square"></i> Submit
                                        </button>
                                    </div>
                                    
                                </form>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- New Product Add End -->

    <!-- footer Start -->
    <%- include('../../partials/footer')%>
    <!-- footer En -->
